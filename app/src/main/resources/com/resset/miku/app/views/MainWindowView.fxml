            </ToggleButton>
            <Circle fill="DODGERBLUE" onMouseClicked="#sessionsOnClick" radius="20.0" stroke="BLACK" strokeType="INSIDE" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
         </children>
      </AnchorPane>
   </left>
</BorderPane>
