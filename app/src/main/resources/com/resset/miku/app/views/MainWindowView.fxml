                  <FontIcon iconLiteral="fas-download" iconSize="20" />
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="preferencesButton" layoutX="20.0" layoutY="550.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#preferencesOnClick" prefHeight="40.0" prefWidth="40.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
               <graphic>
                  <FontIcon iconLiteral="fas-sliders-h" iconSize="20" />
