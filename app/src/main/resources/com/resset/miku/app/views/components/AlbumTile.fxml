<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root maxWidth="-Infinity" prefWidth="200.0" styleClass="tile" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane>
         <children>
            <ImageView fx:id="coverView" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#getAlbumView" pickOnBounds="true" preserveRatio="true" styleClass="coverview">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#050505" height="25.0" radius="12.0" spread="0.5" width="25.0" />
               </effect></ImageView>
            <Button mnemonicParsing="false" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
               <graphic>
                  <FontIcon iconLiteral="fas-plus" />
               </graphic>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </AnchorPane>
      <Label fx:id="titleLabel" maxWidth="1.7976931348623157E308" styleClass="title" text="Label">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin></Label>
      <Label fx:id="artistLabel" maxWidth="1.7976931348623157E308" styleClass="subtitle" text="Label">
         <VBox.margin>
            <Insets />
         </VBox.margin></Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
   </padding>
</fx:root>
